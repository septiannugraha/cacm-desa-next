# Production Environment Variables
# Copy this file to .env.production and fill in your actual values
# NEVER commit .env.production to git!

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
DB_NAME=CACMDesa
DB_PASSWORD=YourStrong@Passw0rd2024!
DB_PORT=1433

# Database Connection String (auto-generated in docker-compose)
# When running in Docker: uses service name 'mssql'
# When running locally: use 'localhost'
DATABASE_URL="sqlserver://mssql:1433;database=CACMDesa;user=sa;password=YourStrong@Passw0rd2024!;encrypt=false;trustServerCertificate=true"

# =============================================================================
# NEXTAUTH CONFIGURATION
# =============================================================================
# IMPORTANT: Generate a new secret for production!
# Run: openssl rand -base64 32
NEXTAUTH_SECRET=your-super-secret-key-change-this-in-production

# Your production URL (include https:// and domain)
# If using default port 3030, use: http://localhost:3030 for local testing
NEXTAUTH_URL=https://your-domain.com

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
APP_PORT=3030
NODE_ENV=production

# =============================================================================
# NGINX CONFIGURATION (if using nginx profile)
# =============================================================================
NGINX_HTTP_PORT=80
NGINX_HTTPS_PORT=443

# =============================================================================
# SECURITY NOTES
# =============================================================================
# 1. Generate a strong NEXTAUTH_SECRET: openssl rand -base64 32
# 2. Use a strong DB_PASSWORD (min 8 chars, uppercase, lowercase, numbers, symbols)
# 3. Set NEXTAUTH_URL to your actual production domain
# 4. Never expose DB_PORT to the internet (only to your app container)
# 5. Consider using Docker secrets for sensitive values in production
